            </Grid>

            <!--  Row 1  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <!--  Column 0: Image set  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>




                    <!--  Column 3: Table and Buttons  -->
                    <StackPanel Orientation="Vertical">

                        <TextBlock
                            Grid.Row="0"
                            Margin="5,0,0,5"
                            FontSize="15"
                            Foreground="White"
                            Text="Image Set" />

                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                            <!--  Treeview  -->
                            <TreeView
                                x:Name="DirectoryTree"
                                MinHeight="70"
                                ItemsSource="{Binding Items}"
                                SelectedValuePath="FullPath">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="{x:Type TreeViewItem}">
                                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />

                                    </Style>
                                </TreeView.ItemContainerStyle>

                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">

                                        <!--  Binding DataContext is needed if the structure is being nested  -->
                                        <StackPanel
                                            x:Name="TreeElement"
                                            cal:Action.TargetWithoutContext="{Binding DataContext, ElementName=DirectoryTree}"
                                            Orientation="Horizontal">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseDown">
                                                    <cal:ActionMessage MethodName="TreeElementMouseDown">
                                                        <cal:Parameter Value="{Binding FullPath}" />
                                                    </cal:ActionMessage>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>


                                            <Image
                                                Width="20"
                                                Margin="3"
                                                Source="{Binding ImageName, Converter={x:Static local:HeaderToImageConverter.Instance}}" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="{Binding Name}" />
                                        </StackPanel>


                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>

                            </TreeView>
                        </ScrollViewer>

                        <!--  Table  -->
                        <!--  Contents binding  -->
                        <DataGrid
                            Width="200"
                            Height="200"
                            Margin="0,10"
                            Padding="2"
                            HorizontalAlignment="Center"
                            AutoGenerateColumns="False"
                            Background="#FF2B2B2C"
                            BorderBrush="#FF3B3B3B"
                            CanUserReorderColumns="False"
                            CanUserResizeColumns="False"
                            CanUserResizeRows="False"
                            CanUserSortColumns="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding ClassPoints}"
                            RowBackground="#2b2b2c"
                            RowHeaderWidth="0"
                            SelectedItem="{Binding Path=SelectedRow, Mode=OneWayToSource}"
                            SelectionMode="Extended"
                            SelectionUnit="FullRow"
                            Style="{DynamicResource DatagridStyle}">

                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    MinWidth="90"
                                    Binding="{Binding ClassName}"
                                    Foreground="White"
                                    Header="Class" />

                                <DataGridTextColumn
                                    MinWidth="70"
                                    Binding="{Binding NumPoints}"
                                    Foreground="White"
                                    Header="Points" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!--  Adding element in the table  -->
                        <Grid Height="30" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Plus Button  -->
                            <local:TablePlusButton
                                x:Name="PlusButton"
                                Grid.Column="0"
                                Width="25"
                                Height="20"
                                IsEnabled="{Binding PlusBool}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <cal:ActionMessage MethodName="PlusClick" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </local:TablePlusButton>

                            <local:RevertButton
                                Grid.Column="1"
                                Width="20"
                                IsEnabled="{Binding CanBeReverted}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <cal:ActionMessage MethodName="Revert" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </local:RevertButton>

                            <!--  Ok button  -->
                            <local:OkButton
                                Grid.Column="2"
                                Width="20"
                                IsEnabled="{Binding OKBool}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <cal:ActionMessage MethodName="AddNewLabel" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </local:OkButton>

                        </Grid>


                        <!--  ColorBox  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  TextBox  -->
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                Foreground="White"
                                Text="Color" />

                            <!--  Rectangle  -->
                            <Rectangle Grid.Column="1" Margin="20,0">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="{Binding Colour}" />
                                </Rectangle.Fill>
                            </Rectangle>

                        </Grid>

                        <!--  Num of points  -->
                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  TextBox  -->
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                Foreground="White"
                                Text="Num of Pixel" />

                            <!--  TextBox  -->
                            <!--  #Pixel binding  -->
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Foreground="White"
                                Text="{Binding NumPoints}" />
                        </Grid>

                        <!--  Save and Train Buttons  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Save Button  -->
                            <Button
                                Grid.Column="0"
                                Width="80"
                                Height="30"
                                HorizontalAlignment="Center"
                                IsEnabled="{Binding SaveBool}"
                                ToolTip="Save"
                                ToolTipService.ShowOnDisabled="True">
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="20" Style="{StaticResource SaveImage}" />
                                    <TextBlock
                                        Margin="5,0"
                                        Style="{StaticResource ButtonText}"
                                        Text="Save" />
                                </StackPanel>

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <cal:ActionMessage MethodName="Save" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>



                            <!--  TODO: Train Button  -->
                            <Button
                                Grid.Column="1"
                                Width="80"
                                Height="30"
                                HorizontalAlignment="Center"
                                IsEnabled="{Binding TrainBool}"
                                ToolTip="Train"
                                ToolTipService.ShowOnDisabled="True">
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="20" Style="{StaticResource TrainImage}" />
                                    <TextBlock
                                        Margin="5,0"
                                        Style="{StaticResource ButtonText}"
                                        Text="Train" />
                                </StackPanel>
                            </Button>


                        </Grid>

                    </StackPanel>
                </Grid>

                <!--  Column 2: Main Image  -->
                <Grid Grid.Column="1">

                    <!--  Original Image  -->
                    <Image
                        x:Name="MainImage"
                        Margin="5"
                        Source="{Binding MainBmpImage}" />

                    <!--  Image source binding  -->
                    <Image
                        x:Name="OverlayImage"
                        Margin="5"
                        IsEnabled="{Binding ImageBool}"
                        Source="{Binding OverlayImage}">

                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="pb:PushBindingManager.StylePushBindings">
                                    <Setter.Value>
                                        <pb:PushBindingCollection>
                                            <pb:PushBinding Path="MyHeight" TargetProperty="ActualHeight" />
                                            <pb:PushBinding Path="MyWidth" TargetProperty="ActualWidth" />
                                        </pb:PushBindingCollection>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Image.Style>

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <cal:ActionMessage MethodName="ClickPoint">
                                    <cal:Parameter Value="$eventArgs" />
                                    <cal:Parameter Value="$source" />
                                </cal:ActionMessage>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                    </Image>
                </Grid>

                <Grid Grid.Column="2">

                    <syncfusion:SfChart
                        x:Name="chart1"
                        MinHeight="440"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="0,7"
                        Foreground="DarkGray"
                        Header="Pixel explore"
                        Series="{Binding lineSerieCollection}">


                        <syncfusion:SfChart.Legend>
                            <syncfusion:ChartLegend CheckBoxVisibility="Visible" DockPosition="Top">
                                <syncfusion:ChartLegend.Template>
                                    <ControlTemplate>
                                        <ScrollViewer
                                            Margin="30,5,30,5"
                                            HorizontalScrollBarVisibility="Auto"
                                            VerticalScrollBarVisibility="Auto">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </syncfusion:ChartLegend.Template>
                            </syncfusion:ChartLegend>
                        </syncfusion:SfChart.Legend>

                        <syncfusion:SfChart.Behaviors>

                            <syncfusion:ChartTrackBallBehavior AxisLabelAlignment="Center" LabelDisplayMode="NearestPoint" />

                            <syncfusion:ChartSelectionBehavior EnableSegmentSelection="True" SelectionStyle="Single" />

                            <syncfusion:ChartZoomPanBehavior
                                EnableSelectionZooming="True"
                                EnableZoomingToolBar="True"
                                HorizontalPosition="Left"
                                ToolBarBackground="#FF303030"
                                ToolBarItemHeight="15"
                                ToolBarItemWidth="15"
                                VerticalPosition="Top" />

                        </syncfusion:SfChart.Behaviors>

                        <syncfusion:SfChart.PrimaryAxis>
                            <syncfusion:NumericalAxis
                                EnableAutoIntervalOnZooming="True"
                                Header="Wavelenghts (index)"
                                Interval="0"
                                LabelsIntersectAction="Hide"
                                Maximum="250"
                                Minimum="0"
                                ShowTrackBallInfo="True" />
                        </syncfusion:SfChart.PrimaryAxis>

                        <syncfusion:SfChart.SecondaryAxis>
                            <syncfusion:NumericalAxis
                                EnableAutoIntervalOnZooming="True"
                                Header="Reflectance raw value"
                                Interval="0"
                                LabelsIntersectAction="Hide"
                                ShowTrackBallInfo="True" />
                        </syncfusion:SfChart.SecondaryAxis>

                    </syncfusion:SfChart>
                </Grid>              


            </Grid>
        </Grid>
    </Border>


</Window>
